// static/js/predict.js
document.getElementById("predictForm").addEventListener("submit", async (event) => {
    event.preventDefault();
    const data = {
        Race: document.getElementById("race").value,
        Drug_Type: document.getElementById("drug_type").value,
        Year: parseInt(document.getElementById("year").value)
    };
    
    const response = await fetch("/predict", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data)
    });
    
    const result = await response.json();
    document.getElementById("result").innerText = result.prediction ? "Predicted Sentence: Less than 36 months" : "Predicted Sentence: 36 months or more";
});
